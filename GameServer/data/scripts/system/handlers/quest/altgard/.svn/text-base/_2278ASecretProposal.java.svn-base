package quest.altgard;

import gameserver.model.gameobjects.player.Player;
import gameserver.questEngine.handlers.QuestHandler;
import gameserver.questEngine.model.QuestCookie;
import gameserver.questEngine.model.QuestState;
import gameserver.questEngine.model.QuestStatus;



/**
 * @author XRONOS
 *
 */

public class _2278ASecretProposal extends QuestHandler
{
	private final static int	questId	= 2278;
	private final static int[]	npcs = {203590, 203557, 204206, 204075};
	
	public _2278ASecretProposal()
	{
		super(questId);
	}

	@Override
	public void register()
	{
		qe.setNpcQuestData(203590).addOnQuestStart(questId);
		for(int npc: npcs)
			qe.setNpcQuestData(npc).addOnTalkEvent(questId);
	}

	@Override
	public boolean onDialogEvent(QuestCookie env)
	{
		Player player = env.getPlayer();
		QuestState qs = player.getQuestStateList().getQuestState(questId);
		
		if(defaultQuestNoneDialog(env, 203590))
			return true;

		if(qs == null)
			return false;

		int var = qs.getQuestVarById(0);
		
		if(qs.getStatus() == QuestStatus.START)
		{
			switch(env.getTargetId())
			{
				case 203557:
					switch(env.getDialogId())
					{
						case 26:
							if(var == 0)
								return sendQuestDialog(env, 1352);
						case 10000:
							return defaultCloseDialog(env, 0, 1, 182203254, 1, 0, 0);
					}
					break;
				case 204206:
					switch(env.getDialogId())
					{
						case 26:
							if(var == 1)
								return sendQuestDialog(env, 1693);
						case 10001:
							return defaultCloseDialog(env, 1, 2, 0, 0, 182203254, 1);
					}
					break;
				case 204075:
					switch(env.getDialogId())
					{
						case 26:
							if(var == 2)
								return sendQuestDialog(env, 2034);
						case 10002:
							return defaultCloseDialog(env, 2, 3, true, false);
					}
					break;
			}
		}
		return defaultQuestRewardDialog(env, 203557, 2375);
	}
}
